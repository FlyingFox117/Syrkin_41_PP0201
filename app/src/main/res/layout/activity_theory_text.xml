<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/theory_text_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/body"
    tools:context=".TheoryActivity"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="@color/head">

        <ImageButton
            android:id="@+id/btnTheoryBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/back"
            app:tint="@color/textPrimary"
            android:contentDescription="Назад"/>

        <TextView
            android:id="@+id/tvTheoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Курсы"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"/>

        <ImageButton
            android:id="@+id/btnHelp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_dialog_info"
            app:tint="@color/textPrimary"
            android:contentDescription="Помощь"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvTheoryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:padding="16dp"/>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btnTheoryContinue"
        android:text="Продолжить"
        android:enabled="false"/>
</LinearLayout>